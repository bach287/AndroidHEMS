<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemonstrationActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/demo_device_img"
                style="@style/MyDeviceObject"
                android:background="@mipmap/ev_foreground" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demo_device_img"
                android:text="99999999"
                android:textAlignment="center"
                android:textSize="@dimen/device_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_48dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/demo_device_img2"
                style="@style/MyDeviceObject"
                android:src="@mipmap/battery_foreground" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demo_device_img2"
                android:text="99999999"
                android:textAlignment="center"
                android:textSize="@dimen/device_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_48dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/device_bg"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/demo_home"
                style="@style/MyDeviceObject"
                android:src="@mipmap/home_foreground"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/demo_home_instantan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="99999999"
                android:textAlignment="center"
                android:textSize="@dimen/device_text" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:layout_weight="2">

        <RelativeLayout
            android:id="@+id/wrap3"
            android:layout_width="@dimen/demo_device_wrap_width"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/demo_device_img3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_48dp"/>
            <ImageView
                android:id="@+id/demo_device_img3"
                style="@style/MyDeviceObject"
                android:src="@mipmap/battery_foreground"
                android:layout_above="@+id/text3"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="99999999"
                android:textSize="@dimen/device_text" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wrap2"
            android:layout_width="@dimen/demo_device_wrap_width"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/demo_device_img4"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_48dp" />

            <ImageView
                android:id="@+id/demo_device_img4"
                style="@style/MyDeviceObject"
                android:src="@mipmap/battery_foreground"
                android:layout_above="@+id/text4"
                />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="99999999"
                android:textSize="@dimen/device_text" />


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>